class Cat:
    def __init__(self, name, breed, age, condition):
        self.name = name
        self.breed = breed
        self.age = age
        self.condition = condition

class Dog:
    def __init__(self, name, breed, age, condition):
        self.name = name
        self.breed = breed
        self.age = age
        self.condition = condition

class Bird:
    def __init__(self, name, breed, age, condition):
        self.name = name
        self.breed = breed
        self.age = age
        self.condition = condition
